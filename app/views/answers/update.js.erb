$('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>');

<% if !@answer.errors.present? %>
  $('.best-answer').html('<%= j render 'answers/best_answer', resource: @question.best_answer %>')
  $('.other-answers').html('<%= j render @question.answers.where.not(id: @question.best_answer_id) %>')
<% end %>
